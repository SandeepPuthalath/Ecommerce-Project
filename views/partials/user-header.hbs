<style>
    #myModal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
        z-index: 9999;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
    }


    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 600px;
    }

    .modal {
        max-width: 100%;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
</style>

<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h1>My Wallet</h1>
        <p>Balance: â‚¹<span id="walletBalance"></span></p>
        <h2>Transaction History</h2>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>March 1, 2023</td>
                    <td>Product Purchase</td>
                    <td>-$50.00</td>
                </tr>
                <tr>
                    <td>February 28, 2023</td>
                    <td>Deposit</td>
                    <td>$150.00</td>
                </tr>
                <!-- Add more transaction history rows here -->
            </tbody>
        </table>
        <input style="visibility: hidden;" type="text" value="{{user._id}}" data-user="{{user._id}}" id="userId">
    </div>
</div>
<script>
    $(document).ready(function () {
        // Get the modal
        var modal = $("#myModal");

        // Get the <span> element that closes the modal
        var span = $(".close");

        // When the user clicks on <span> (x), close the modal
        span.click(function () {
            modal.hide();
        });

        // When the user clicks anywhere outside of the modal, close it
        $(window).click(function (event) {
            if (event.target == modal[0]) {
                modal.hide();
            }
        });

        // Show the modal when a button is clicked
        $("#walletButton").click(function () {
            const userId = $("#userId").data('user');
            $.ajax({
                url: "/user-wallet/" + userId,
                method: "get",
            }).done((res) => {
                document.getElementById("walletBalance").innerHTML = res;
            })

            modal.show();
        });

        $('.logout').click((e) => {
            e.preventDefault();
            $.ajax({
                type: 'get',
                url: '/logout',
            }).done((res) => {
                new swal("Logout successfull", `${res.message}`, "success").then(() => {
                    location.reload();
                })
            })

        })

    });


</script>