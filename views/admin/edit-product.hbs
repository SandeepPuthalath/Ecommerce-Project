<main class="main-wrap">
  <section class="content-main">
    <div class="row">
      <div class="col-9">
        <div class="content-header">
          <h2 class="content-title">Edit Product</h2>

        </div>
      </div>
      {{#if productStatus}}
      <div class="alert alert-success" role="alert">
        {{productStatus}}
      </div>
      {{/if}}
      <form id="edit-product" action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="col-lg-6">
            <div class="card mb-4">
              <div class="card-header">
                <h4>Basic</h4>
              </div>
              <div class="card-body">
                <div class="mb-4">
                  <label for="product_name" class="form-label">Product title</label>
                  <input type="text" name="name" value="{{product.product_name}}" placeholder="Type here"
                    class="form-control" id="product_name">
                </div>
                <div class="mb-4">
                  <label class="form-label">Full description</label>
                  <textarea name="description" placeholder="Type here" class="form-control"
                    rows="4">{{product.product_description}}</textarea>
                </div>
                <div class="row">
                  <div class="col-lg-4">
                    <div class="mb-4">
                      <label class="form-label">Regular price</label>
                      <div class="row gx-2">
                        <input placeholder="$" value="{{product.product_price}}" name="price" type="text"
                          class="form-control">
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="mb-4">
                      <label class="form-label">Quantity</label>
                      <input placeholder="Quantity" value="{{product.product_quantity}}" name="quantity" type="text"
                        class="form-control">
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <label class="form-label">Category</label>
                    <select style="text-transform: capitalize;" name="category" class="form-select">
                      {{#each category}}
                      {{#if this.category_view}}
                      <option value="{{this.category_name}}" selected="{{product.product_category}}">
                        {{this.category_name}}</option>
                      {{/if}}
                      {{/each}}
                    </select>
                  </div>
                </div>
                {{!-- <label class="form-check mb-4">
                  <input class="form-check-input" type="checkbox" value="">
                  <span class="form-check-label"> Make a template </span>
                </label> --}}
              </div>
            </div> <!-- card end// -->
          </div>
          <div class="col-lg-6">
            <div class="row">
              <div class="col-lg-5">
                <div class="card mb-6">
                  <div class="card-header">
                    <h4>Media</h4>
                  </div>
                  <div class="card-body">
                    <div class="input-upload">
                      <img src="/{{product.product_images.[0].path}}" id="img1" alt="" />
                      <input class="form-control" name="img1" value="/{{product.product_images.[0].path}}" onchange="viewImage1(event)" type="file" accept=".jpg,.png,.gif">
                    </div>
                  </div>
                </div>
                <!-- card end// -->
              </div>
              <div class="col-lg-5">
                <div class="card mb-6">
                  <div class="card-header">
                    <h4>Media</h4>
                  </div>
                  <div class="card-body">
                    <div class="input-upload">
                      <img src="/{{product.product_images.[1].path}}" id="img2" alt="" />
                      <input class="form-control" name="img2"  onchange="viewImage2(event)" value="/{{product.product_images.[1].path}}" type="file"accept=".jpg,.png,.gif">
                    </div>
                  </div>
                </div>
                <!-- card end// -->
              </div>
            </div>
            <div class="row">
              <div class="col-lg-5">
                <div class="card mb-6">
                  <div class="card-header">
                    <h4>Media</h4>
                  </div>
                  <div class="card-body">
                    <div class="input-upload">
                      <img src="/{{product.product_images.[2].path}}" id="img3" alt="" />
                      <input class="form-control" name="img3" onchange="viewImage3(event)" value="/{{product.product_images.[2].path}}" type="file" accept=".jpg,.png,.gif">
                    </div>
                  </div>
                </div>
                <!-- card end// -->
              </div>
              <div class="col-lg-5">
                <div class="card mb-6">
                  <div class="card-header">
                    <h4>Media</h4>
                  </div>
                  <div class="card-body">
                    <div class="input-upload">
                      <img src="/{{product.product_images.[3].path}}" id="img4" alt="" />
                      <input class="form-control" name="img4" onchange="viewImage4(event)" value="/{{product.product_images.[3].path}}" type="file" accept=".jpg,.png,.gif">
                    </div>
                  </div>
                </div>
                <!-- card end// -->
              </div>
            </div>

          </div>
        </div>
        <div>
          <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button>
          <button type="submit" class="btn btn-md rounded font-sm hover">Publich</button>
        </div>
      </form>
    </div>
    <script>

      let form = document.getElementById('edit-product');
      form.addEventListener('submit', (e) => {
        e.defaultPrevented()// prevent form from auto submitting..
      })
      //image 1
      function viewImage1(event) {
        document.getElementById('img1').src =
          URL.createObjectURL(event.target.files[0])
      } //image 2
      function viewImage2(event) {
        document.getElementById('img2').src =
          URL.createObjectURL(event.target.files[0])
      } //image 3
      function viewImage3(event) {
        document.getElementById('img3').src =
          URL.createObjectURL(event.target.files[0])
      } //image 4
      function viewImage4(event) {
        document.getElementById('img4').src =
          URL.createObjectURL(event.target.files[0])
      }
    </script>
  </section> <!-- content-main end// -->
</main>